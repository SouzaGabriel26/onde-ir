{
  "name": "onde-ir",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm services:up && pnpm services:wait && pnpm database:reset && next dev",
    "build": "next build",
    "start": "next start",
    "docker:compose": "docker compose -f ./infra/compose.yaml --env-file .env",
    "database:reset": "node --import tsx infra/scripts/reset-tables.ts",
    "services:wait": "node --import tsx infra/scripts/wait-services.ts",
    "services:up": "pnpm docker:compose up -d",
    "services:down": "pnpm docker:compose down",
    "prepare": "husky",
    "lint": "pnpm lint:next && pnpm lint:prettier",
    "lint:next": "next lint --max-warnings=0 --dir .",
    "lint:prettier": "prettier --check .",
    "lint:fix": "pnpm eslint --fix . && pnpm prettier --write .",
    "test": "vitest --exclude **/tests/reset-database.test.ts"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.0",
    "framer-motion": "^11.2.6",
    "next": "14.2.3",
    "pg": "^8.11.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/pg": "^8.11.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.11.2",
    "typescript": "^5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "pnpm": ">=8",
    "node": ">=18"
  }
}
