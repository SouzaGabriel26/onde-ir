{
  "type": "module",
  "name": "onde-ir",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm services:up && pnpm services:wait && pnpm database:seed && pnpm next",
    "next": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "database:seed": "node --import tsx infra/scripts/populate-tables.ts",
    "services:wait": "node --import tsx infra/scripts/wait-services.ts",
    "docker:compose": "docker compose -f ./infra/compose.yaml",
    "services:up": "pnpm docker:compose --env-file .env.local up -d",
    "services:down": "pnpm docker:compose --env-file .env.local down",
    "ci:services:up": "pnpm docker:compose --env-file .env up -d",
    "ci:services:down": "pnpm docker:compose --env-file .env down",
    "prepare": "husky",
    "biome": "pnpm lint:next && pnpm biome:check",
    "lint:next": "next lint --max-warnings=0 --dir .",
    "biome:check": "biome ci --vcs-enabled=true --vcs-use-ignore-file=true",
    "biome:write": "biome check --vcs-enabled=true --vcs-use-ignore-file=true --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate:create": "pnpm migrate create",
    "migrate:up": "pnpm migrate up",
    "migrate:down": "pnpm migrate down",
    "migrate": "node-pg-migrate --migrations-dir infra/migrations --migration-file-language sql --envPath .env.local --database-url-var DEFAULT_DATABASE_URL"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@react-email/components": "^0.0.25",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.0",
    "embla-carousel-react": "^8.5.2",
    "framer-motion": "^12.9.2",
    "jose": "^5.9.3",
    "next": "15.1.3",
    "next-themes": "^0.3.0",
    "pg": "^8.13.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-dropzone": "^14.2.3",
    "react-intersection-observer": "^9.15.1",
    "remove": "^0.1.5",
    "resend": "^4.0.0",
    "slug": "^10.0.0",
    "sonner": "^1.5.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.4",
    "@types/pg": "^8.11.10",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/slug": "^5.0.9",
    "bcrypt": "^5.1.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "husky": "^9.1.6",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.10",
    "lucide-react": "^0.446.0",
    "node-pg-migrate": "^7.9.1",
    "postcss": "^8.4.47",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "pnpm": ">=8",
    "node": ">=18"
  }
}
